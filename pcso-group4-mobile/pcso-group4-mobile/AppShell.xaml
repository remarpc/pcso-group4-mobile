<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:pcso_group4_mobile.View"
    x:Class="pcso_group4_mobile.AppShell"
    Routing.Route="Root"
    Title="Root">

    <TabBar
        Route="Tabs">
        <Tab 
            Title="Home"
            Icon="icon_dashboard.png">
            <ShellContent ContentTemplate="{DataTemplate views:HomePage}"/>
            
        </Tab>
        <Tab 
            Title="Combinations"
            Icon="icon_add.png">
            <ShellContent ContentTemplate="{DataTemplate views:CombinationsPage}" />
        </Tab>
        <Tab 
            Title="Lucky Pick"
            Icon="icon_generate.png">
            <ShellContent ContentTemplate="{DataTemplate views:LuckyPickPage}" />
        </Tab>
    </TabBar>

</Shell>
